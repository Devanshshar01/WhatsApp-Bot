# Bot Configuration
BOT_NAME=WhatsApp Bot
PREFIX=/
OWNER_NUMBERS=Phone_Number_with_country_code

# Database
DATABASE_PATH=./database/bot.db

# AI Features (free tier from https://ai.google.dev/)
GEMINI_API_KEY=your_gemini_api_key_here

# Features
ENABLE_AUTO_RESPONSE=false
ENABLE_ANTI_SPAM=true
ENABLE_ANTI_LINK=true
ENABLE_PROFANITY_FILTER=true

# Group Automations (set to false to disable auto-messages)
ENABLE_WELCOME_MESSAGES=false
ENABLE_GOODBYE_MESSAGES=false

# Rate Limiting
COMMAND_COOLDOWN=3000
MAX_MESSAGES_PER_MINUTE=10

# Regional Settings
DEFAULT_COUNTRY_CODE=1

# Media
MEDIA_FOLDER=./media
MAX_MEDIA_SIZE=16777216

# Logging
LOG_LEVEL=info
ENABLE_MESSAGE_LOGGING=true
DEBUG_MODE=false

# Admin Panel
ADMIN_PASSWORD=change-me
ADMIN_JWT_SECRET=super-secret-jwt-key
ADMIN_SESSION_EXPIRY=3600
ADMIN_SESSION_COOKIE=wpbot_admin
ADMIN_PORT=4000
